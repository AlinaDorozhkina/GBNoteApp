<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextStyle">@style/header_text</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
    </style>
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

        <item name="elevation">4dp</item>
    </style>

</resources>